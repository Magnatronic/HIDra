<Window x:Class="HIDra.UI.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HIDra Settings" 
        Height="320" Width="450"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#2C2C2C">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Cursor Sensitivity" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Foreground="White"
                   Margin="0,0,0,20"/>

        <!-- Sensitivity Spin Box -->
        <Grid Grid.Row="1" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Up Button -->
            <Button x:Name="UpButton"
                    Grid.Column="0"
                    Content="▲"
                    Width="80"
                    Height="80"
                    FontSize="24"
                    Background="#3C3C3C"
                    Foreground="White"
                    BorderBrush="#555555"
                    Margin="0,0,20,0"
                    Click="UpButton_Click"/>

            <!-- Value Display -->
            <Border Grid.Column="1"
                    Background="#3C3C3C"
                    BorderBrush="#555555"
                    BorderThickness="2"
                    CornerRadius="5"
                    Width="120"
                    Height="80">
                <TextBlock x:Name="SensitivityValueText" 
                           Text="1.0x" 
                           Foreground="White" 
                           FontSize="28"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Down Button -->
            <Button x:Name="DownButton"
                    Grid.Column="2"
                    Content="▼"
                    Width="80"
                    Height="80"
                    FontSize="24"
                    Background="#3C3C3C"
                    Foreground="White"
                    BorderBrush="#555555"
                    Margin="20,0,0,0"
                    Click="DownButton_Click"/>
        </Grid>

        <!-- Range Label and Grid 3 Checkbox -->
        <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,0">
            <TextBlock Text="Range: 0.10x (slowest) to 1.00x (fastest) in 0.05 steps" 
                       Foreground="#999999"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>
            
            <CheckBox x:Name="Grid3AutoSuspendCheckBox"
                      Content="Auto-suspend when Grid 3 is running"
                      Foreground="White"
                      FontSize="14"
                      HorizontalAlignment="Center"
                      IsChecked="True"
                      Checked="Grid3AutoSuspendCheckBox_Changed"
                      Unchecked="Grid3AutoSuspendCheckBox_Changed"/>
        </StackPanel>

        <!-- Close Button -->
        <Button Grid.Row="3" 
                Content="Close" 
                Width="100" 
                Height="35"
                HorizontalAlignment="Center"
                Margin="0,20,0,0"
                Click="CloseButton_Click"
                Background="#3C3C3C"
                Foreground="White"
                BorderBrush="#555555"
                FontSize="14"/>
    </Grid>
</Window>
