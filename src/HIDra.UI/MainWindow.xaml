<Window x:Class="HIDra.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:HIDra.UI"
        mc:Ignorable="d"
    Title="HIDra - Controller to Mouse/Keyboard" 
        Height="380" Width="550"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Background="#2C2C2C">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title and Logo -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="🎮 HIDra" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Status Display -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <!-- Connection Status -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                <Ellipse x:Name="StatusIndicator" 
                         Width="14" 
                         Height="14" 
                         Fill="#DC3545" 
                         Margin="0,0,12,0">
                    <Ellipse.Effect>
                        <DropShadowEffect Color="#DC3545" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                    </Ellipse.Effect>
                </Ellipse>
                <TextBlock x:Name="StatusText" 
                           Text="Disconnected" 
                           FontSize="18" 
                           Foreground="White"
                           FontWeight="SemiBold"/>
            </StackPanel>

            <!-- Controller Info -->
            <TextBlock x:Name="ControllerInfo" 
                       Text="No controller detected" 
                       FontSize="13" 
                       TextAlignment="Center" 
                       Foreground="#CCCCCC"
                       Margin="0,0,0,0"/>
        </StackPanel>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,25,0,0">
            <Button x:Name="ConnectButton" 
                    Content="Reconnect" 
                    Width="100" 
                    Height="40" 
                    FontSize="13"
                    Background="#3C3C3C"
                    Foreground="White"
                    BorderBrush="#555555"
                    Margin="0,0,8,0"
                    Click="ConnectButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3C3C3C"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="#555555"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4C4C4C"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="StopButton" 
                    Content="Stop" 
                    Width="80" 
                    Height="40" 
                    FontSize="13"
                    Background="#3C3C3C"
                    Foreground="White"
                    BorderBrush="#555555"
                    IsEnabled="False"
                    Margin="0,0,8,0"
                    Click="StopButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3C3C3C"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="#555555"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4C4C4C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#2C2C2C"/>
                                <Setter Property="Foreground" Value="#666666"/>
                                <Setter Property="BorderBrush" Value="#444444"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Settings" 
                    Width="85" 
                    Height="40" 
                    FontSize="13"
                    Background="#3C3C3C"
                    Foreground="White"
                    BorderBrush="#555555"
                    Margin="0,0,8,0"
                    Click="SettingsButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3C3C3C"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="#555555"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4C4C4C"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Help" 
                    Width="70" 
                    Height="40" 
                    FontSize="13"
                    Background="#3C3C3C"
                    Foreground="White"
                    BorderBrush="#555555"
                    Click="HelpButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3C3C3C"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="#555555"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4C4C4C"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
